{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "strict": true,
        "noEmit": true,
        "jsx": "preserve",
        "incremental": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "baseUrl": "../..",
        "paths": {
            "@/*": ["./*"],
            "@apps/*": ["apps/desktop/*"],
            "@apps/amplify_outputs.json": ["apps/desktop/amplify_outputs.json"],
            "@app/*": ["apps/desktop/app/*"],
            "@src/*": ["apps/desktop/src/*"],
            "@amplify": ["amplify"],
            "@amplify/*": ["amplify/*"],
            "@packages/ui": ["packages/ui/src"],
            "@packages/ui/*": ["packages/ui/src/*"],
            "@packages/domain": ["packages/domain/src"],
            "@packages/domain/*": ["packages/domain/src/*"],
            "@packages/services": ["packages/services/src"],
            "@packages/services/*": ["packages/services/src/*"],
            "@packages/types": ["packages/types/src"],
            "@packages/types/*": ["packages/types/src/*"],
            "@assets/*": ["apps/desktop/src/assets/*"],
            "@components/*": ["apps/desktop/src/components/*"],
            "@hooks/*": ["apps/desktop/src/hooks/*"],
            "@context/*": ["apps/desktop/src/context/*"],
            "@utils/*": ["apps/desktop/src/utils/*"],
            "@public/*": ["apps/desktop/public/*"]
        },
        "plugins": [{ "name": "next" }]
    },
    "include": [
        "next-env.d.ts",
        "app/**/*.ts",
        "app/**/*.tsx",
        "app/**/*.js",
        "app/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "public/**/*.json",
        "middleware.ts",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
