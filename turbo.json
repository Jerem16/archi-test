{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**", ".next/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck"]
        },
        "test": {
            "dependsOn": ["^test"],
            "outputs": ["coverage/**"]
        },
        "format": {
            "dependsOn": ["^format"],
            "cache": false
        },
        "dev": {
            "cache": false
        }
    }
}
