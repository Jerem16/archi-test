{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@apps/*": ["apps/desktop/*", "apps/mobile/*"],
            "@apps/desktop/*": ["apps/desktop/*"],
            "@apps/mobile/*": ["apps/mobile/*"],
            "@app/*": ["apps/desktop/app/*", "apps/mobile/app/*"],
            "@src/*": ["apps/desktop/src/*", "apps/mobile/src/*"],
            "@packages/ui": ["packages/ui/src"],
            "@packages/ui/*": ["packages/ui/src/*"],
            "@packages/services": ["packages/services/src"],
            "@packages/services/*": ["packages/services/src/*"],
            "@packages/types": ["packages/types/src"],
            "@packages/types/*": ["packages/types/src/*"],
            "@packages/domain": ["packages/domain/src"],
            "@packages/domain/*": ["packages/domain/src/*"],
            "@amplify": ["amplify"],
            "@amplify/*": ["amplify/*"]
        }
    },
    "references": [
        {
            "path": "packages/types"
        },
        {
            "path": "packages/domain"
        },
        {
            "path": "packages/services"
        },
        {
            "path": "packages/ui"
        },
        {
            "path": "apps/desktop"
        },
        {
            "path": "apps/mobile"
        }
    ]
}
