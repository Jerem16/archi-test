{
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*",
        "tooling/*"
    ],
    "packageManager": "yarn@4.9.4",
    "engines": {
        "node": "20.18.x"
    },
    "scripts": {
        "dev": "yarn workspace web dev",
        "// build global de l'app (exécute d'abord les deps si nécessaires)": ":",
        "build": "yarn workspaces foreach -Rvt run build",
        "// Type-check partout (sans émettre)": ":",
        "tsc": "yarn workspaces foreach -Rvt run tsc",
        "tsc:packages": "yarn workspaces foreach -Rvt --from \"@packages/*\" run tsc",
        "tsc:web": "yarn workspace web run tsc",
        "// Lint partout": ":",
        "lint": "yarn workspaces foreach -Rvt run lint",
        "lint:web": "yarn workspace web run lint",
        "// Tests partout (placeholders dans les packages)": ":",
        "test": "yarn workspaces foreach -Rvt run test",
        "test:web": "yarn workspace web run test",
        "// Pipeline complète (CI locale)": ":",
        "check": "yarn tsc && yarn lint && yarn test",
        "// Nettoyage multi-workspaces (safe)": ":",
        "clean": "yarn workspaces foreach -Rvt run clean || echo \"no clean script\""
    },
    "devDependencies": {
        "eslint": "^9.15.0",
        "typescript": "5.4.4"
    },
    "resolutions": {
        "react-hook-form": "7.51.5"
    }
}
