{
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*",
        "tooling/*"
    ],
    "packageManager": "yarn@4.9.4",
    "engines": {
        "node": "20.18.x"
    },
    "scripts": {
        "dev": "yarn workspace web dev",
        "build": "tsc -b packages/tsconfig.json",
        "tsc": "yarn tsc:packages && yarn tsc:web",
        "tsc:packages": "tsc -b packages/tsconfig.json",
        "tsc:web": "yarn workspace web run tsc",
        "lint": "yarn workspace @packages/domain run lint",
        "lint:packages": "eslint \"packages/**/*.{ts,tsx,js,jsx}\"",
        "lint:web": "yarn workspace web run lint",
        "test": "yarn workspaces foreach -Rvt run test",
        "test:web": "yarn workspace web run test",
        "check": "yarn tsc && yarn lint && yarn test",
        "clean": "yarn workspaces foreach -Rvt run clean || echo \"no clean script\" && rm -rf packages/*/dist"
    },
    "devDependencies": {
        "@eslint/js": "^9.15.0",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "eslint": "^9.15.0",
        "typescript": "5.4.4"
    },
    "resolutions": {
        "react-hook-form": "7.51.5"
    }
}
