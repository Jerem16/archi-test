{
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*",
        "tooling/*"
    ],
    "packageManager": "yarn@4.9.4",
    "engines": {
        "node": "20.18.x"
    },
    "scripts": {
        "dev": "yarn workspace web dev",
        "build": "tsc -b packages/tsconfig.json",
        "tsc": "yarn tsc:packages && yarn tsc:web",
        "tsc:packages": "tsc -b packages/tsconfig.json",
        "tsc:web": "yarn workspace web run tsc",
        "lint": "eslint packages/domain packages/services packages/types packages/ui apps/web",
        "lint:packages": "eslint \"packages/**/*.{ts,tsx,js,jsx}\"",
        "lint:web": "eslint apps/web",
        "test": "yarn workspaces foreach -Rvt run test",
        "test:web": "yarn workspace web run test",
        "check": "yarn tsc && yarn lint && yarn test",
        "clean": "yarn workspaces foreach -Rvt run clean || echo \"no clean script\" && rm -rf packages/*/dist"
    },
    "devDependencies": {
        "@eslint/js": "^9.35.0",
        "@next/eslint-plugin-next": "^15.0.0",
        "@typescript-eslint/eslint-plugin": "^8.42.0",
        "@typescript-eslint/parser": "^8.42.0",
        "eslint": "^9.35.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-unused-imports": "^4.2.0",
        "typescript": "5.4.4",
        "typescript-eslint": "^8.42.0"
    },
    "resolutions": {
        "react-hook-form": "7.51.5"
    }
}
