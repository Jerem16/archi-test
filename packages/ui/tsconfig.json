{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "composite": true,
        "declaration": true,
        "jsx": "react-jsx",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "baseUrl": ".", // pas de paths cross-packages ici
        "paths": {
            "@packages/ui/*": ["src/*"] // local uniquement (optionnel)
        },
        "skipLibCheck": true
    },
    "include": ["src"],
    "peerDependencies": {
        "aws-amplify": ">=6",
        "@aws-amplify/ui-react": ">=6"
    },
    "references": [{ "path": "../types" }, { "path": "../services" }]
}
