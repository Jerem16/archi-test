{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "composite": true,
        "declaration": true,
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@packages/ui/*": ["src/*"]
        }
    },
    "include": ["src"],
    "references": [{ "path": "../types" }, { "path": "../services" }]
}
