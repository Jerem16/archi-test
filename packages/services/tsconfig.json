{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "composite": true,
        "declaration": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "skipLibCheck": true
    },
    "include": ["src"],
    "references": [
        { "path": "../types" }
    ],
    "peerDependencies": {
        "aws-amplify": ">=6",
        "@aws-amplify/ui-react": ">=6"
    }
}
